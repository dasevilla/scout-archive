      "sub_requirements": [
        {
          "id": "11081",
          "label": "a",
          "content": [
            {
              "type": "text",
              "value": "Prepare a written statement of your qualifications and experience. Include relevant classes you have taken in school and merit badges you have earned."
            }
          ],
          "resources": [],
          "sub_requirements": []
        },
        {
          "id": "11082",
          "label": "b",
          "content": [
            {
              "type": "text",
              "value": "Discuss with your counselor what education, experience, or training you should obtain so you are prepared to serve in a sales position."
            }
          ],
          "resources": [],
          "sub_requirements": []
        }
      ]
    }
  ]
